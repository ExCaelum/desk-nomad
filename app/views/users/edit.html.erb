<div class="container">
  <div class="row">
    <div class="box">
      <div class="col-lg-12">
      <hr class="black-line">
        <h1 class="intro-text text-center black">Edit Account</h1>
      <hr class="black-line">
      <div class="row">
        <%= form_for(@user) do |f| %>

          <%= f.label :first_name %>
          <%= f.text_field :first_name, class: "form-control" %>

          <%= f.label :last_name %>
          <%= f.text_field :last_name, class: "form-control" %>

          <%= f.label :email %>
          <%= f.text_field :email, class: "form-control" %>

          <%= f.label :username%>
          <%= f.text_field :username, :required => true, class: "form-control" %>

          <div class="row">
            <br>
            <div class="col-md-offset-1">
              <%= f.submit "Update Account", class: "btn btn-default" %>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
