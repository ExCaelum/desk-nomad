<div class="container-fluid">

  <div class="row">
    <div class="box">
      <div class="col-lg-12">
        <hr class="black-line">
        <h1 class="text-center">Admin Properties Listing
            <!-- <h2 class="intro-text text-center"><strong>to showcase your content</strong></h2> -->
        </h1>
        <hr class="black-line"><br>
        <div class="row">
          <% @properties.each do |property| %>
            <div class="col-md-3">
              <div class="text-center">
                <p style="background-color:#FDFDFD"><%= link_to (image_tag property.property_image(:square)), property_path(property) %><br>
                <%= link_to property.title, property_path(property), class: "text-muted" %><br>
                <%= property.city %>, <%= property.state %><br>
                $<%= property.price %>/Day<br>
                 Status: <%= property.status %></p>
                 <p><%= link_to "Edit", edit_admin_property_path(property), class: "btn btn-primary" %> </p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
