<div class="container-fluid">
  <div class="row">
    <div class="box">
      <div class="col-lg-12">
        <hr class="black-line">
        <h1 class="row text-center"> Welcome, <%= @user.first_name %>
            <h2 class="intro-text text-center"><strong>Admin Dashboard</strong></h2>
        </h1>
        <hr class="black-line">
        <div class="row">
          <div class="user-info col-md-6 col-md-offset-3 text-center">
            <p>
              First Name: <%= @user.first_name %><br>
              Last Name: <%= @user.last_name %><br>
              Email: <%= @user.email %><br>
              Username: <%= @user.username %><br>
              <%= link_to "Edit User", edit_user_path(@user) %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
