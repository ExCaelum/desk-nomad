<div class="container">
  <div class="row">
    <div class="box">
      <div class="col-lg-12">
      <hr class="black-line">
        <h1 class="intro-text text-center black">Message </h1>
      <hr class="black-line">
      <div class="row">
        <%= form_for (@contact), :html => {:class => 'form-horizontal'} do |f| %>

          <%= f.label :name %>
          <%= f.text_field :name, :required => true, class: "form-control" %>

          <%= f.label :email %>
          <%= f.text_field :email, :required => true, class: "form-control" %>

          <%= f.label :message %>
          <%= f.text_area :message, :required => true, class: "form-control" %>

          <div class="row">
            <br>
            <div class="pad">
              <%= f.submit "Send Message", class: "btn btn-primary" %>
            </div>
          </div>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
