<div class="container">
  <div class="row">
    <div class="box">
      <div class="col-lg-12">
      <hr class="black-line">
        <h1 class="intro-text text-center black">Login</h1>
      <hr class="black-line">
      <div class="row">
        <%= form_for(:session, url: login_path) do |f| %>

          <%= f.label :username%>
          <%= f.text_field :username, class: "form-control" %>

          <%= f.label :password %>
          <%= f.password_field :password, class: "form-control" %>

          <div class="row">
            <br>
            <div class="col-md-offset-1">
              <%= f.submit "Login", class: "btn btn-default" %>
              <%= link_to "Create Account", new_user_path, class: "btn btn-default" %>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
