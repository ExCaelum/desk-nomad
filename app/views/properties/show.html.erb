
<div class="container-fluid">
  <div class="row">
    <div class="box">
      <div class="col-lg-12">
        <hr class="black-line">
        <h1 class="row text-center"> <%= image_tag @property.property_image(:medium) %>
            <h2 class="intro-text text-center"><strong> <%= @property.title %><br><br>
              <%= @property.city %>, <%= @property.state %><br><br>
              $<%= @property.price %>/Day</strong></h2>
            <h2 class="text-center" id="active-retired">
            <% if @property.retired? %>
               Property Unavailable
            <% else %>
              <%= link_to "Book It!", cart_properties_path(property_id: @property.id), method: :post, class: "btn btn-sm text-white muted-red" %>
            <% end %>
            </h2>
        </h1>
        <hr class="black-line">
        <div class="row">
          <div class="col-md-6 col-md-offset-3 text-center">
            <p>
              <%= @property.description %>
            </p>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
