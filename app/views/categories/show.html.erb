<div class="container-fluid">

  <div class="row">
    <div class="box">
      <div class="col-lg-12">
        <hr class="black-line">
        <h1 class="text-center">All <%= @category.title %>s
            <h2 class="intro-text text-center"><strong></strong></h2>
        </h1>
        <hr class="black-line"><br>
        <div class="row">
          <% @category.properties.active.each do |property| %>
            <div class="col-md-3">
              <div class="text-center">
                <p style="background-color:#FDFDFD"><%= link_to (image_tag property.image.url), property_path(property) %><br>
                <%= link_to property.title, property_path(property), class: "text-muted" %><br>
                <%= property.city %>, <%= property.state %> - $<%= property.price %>/Day</p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
