<div class="container-fluid">

  <div class="row">
    <div class="box">
      <div class="col-lg-12">
        <hr class="black-line">
        <h1 class="text-center">All Categories
            <h2 class="intro-text text-center"><strong></strong></h2>
        </h1>
        <hr class="black-line"><br>
        <div class="row">
          <% @categories.each do |category| %>
            <div class="col-md-3">
              <div class="text-center">
                <h1><%= link_to category.title, category_path(category), class: "text-dark" %></h1><br>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
